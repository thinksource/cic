{
  "name": "clatoolkit-backend",
  "version": "0.0.0",
  "description": "CLAtoolkit Node backend written in Typescript",
  "private": true,
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "devserve": "ts-node src/server.ts",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"nodemon dist/server.js\"",
    "test": "jest --forceExit --coverage",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/orpreprocess.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "agenda": "^2.0.2",
    "async": "^2.1.2",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "connect-mongo": "^1.3.2",
    "dotenv": "^7.0.0",
    "errorhandler": "^1.4.3",
    "express": "^4.16.4",
    "express-flash": "^0.0.2",
    "express-session": "^1.15.6",
    "express-validator": "^3.1.3",
    "fbgraph": "^1.3.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.11",
    "lusca": "^1.4.1",
    "mongoose": "^4.6.6",
    "morgan": "^1.9.1",
    "nodemailer": "^2.6.4",
    "passport": "0.3.2",
    "passport-facebook": "^2.1.1",
    "passport-github2": "^0.1.11",
    "passport-google-oauth": "^2.0.0",
    "passport-local": "^1.0.0",
    "passport-slack": "0.0.7",
    "passport-trello": "^0.1.5",
    "passport-twitter": "^1.0.4",
    "pug": "^2.0.3",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.2",
    "@types/express": "^4.0.35",
    "@types/agenda": "^2.0.2",
    "@types/async": "^2.0.40",
    "@types/connect-mongo": "0.0.32",
    "@types/dotenv": "^2.0.20",
    "@types/errorhandler": "0.0.30",
    "@types/express-session": "0.0.32",
    "@types/jest": "^19.2.2",
    "@types/jquery": "^2.0.41",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/lodash": "^4.14.123",
    "@types/mongodb": "^3.1.24",
    "@types/mongoose": "^5.3.26",
    "@types/morgan": "^1.7.32",
    "@types/node": "^11.13.8",
    "@types/nodemailer": "^4.6.7",
    "@types/passport": "^1.0.0",
    "@types/passport-google-oauth": "^1.0.41",
    "@types/supertest": "^2.0.0",
    "concurrently": "^4.1.0",
    "jest": "^19.0.2",
    "node-sass": "^4.13.1",
    "nodemon": "^1.18.6",
    "shelljs": "^0.7.7",
    "supertest": "^2.0.1",
    "ts-jest": "^19.0.8",
    "tslint": "^5.0.0",
    "typescript": "^2.2.2"
  }
}
